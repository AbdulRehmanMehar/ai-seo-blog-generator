# Postgres
POSTGRES_URL=postgres://postgres:postgres@localhost:5432/seo_blog
MYSQL_URL=mysql://root:password@localhost:3306/seo_blog

# Managed Postgres sometimes requires this if you don't provide a CA bundle
POSTGRES_SSL_REJECT_UNAUTHORIZED=true

# TiDB Cloud / managed MySQL often requires TLS
MYSQL_SSL=true
MYSQL_SSL_REJECT_UNAUTHORIZED=true

# Gemini
GEMINI_API_KEY=your_key_here 

# OR USE MULTIPLE KEYS SEPARATED BY COMMAS
GEMINI_API_KEYS="your_key_1,your_key_2"

GEMINI_GENERATION_MODEL=gemini-1.5-flash
GEMINI_EMBEDDING_MODEL=text-embedding-004

# Scheduler (cron)
CRON_SCHEDULE_1=15 9 * * *
CRON_SCHEDULE_2=15 17 * * *

# Safety caps
LLM_MIN_SECONDS_BETWEEN_REQUESTS=10
LLM_DAILY_REQUEST_CAP=20

# Posts to generate per pipeline run
# With 1 key: 2-3 posts, with 3 keys: 6-8 posts
POSTS_PER_RUN=2

# Generation controls
POST_MIN_WORDS=1200
DUPLICATE_SIMILARITY_THRESHOLD=0.85

# SERP STACK APIs - Multiple APIs separated by commas
SERPSTACK_APIS=""

# ZENSERP_APIS APIs - Multiple APIs separated by commas
ZENSERP_APIS=""

# SCRAPPER_X_API - Single API key
SCRAPPER_X_API=""

# Maximum limits for SERPSTACK and ZENSERP
SERPSTACK_MAX_LIMIT=100
ZENSERP_MAX_LIMIT=50

# GitHub Personal Access Token
GITHUB_PAT=""

# Max repos to fetch for knowledge sync (default: 100, set 0 for unlimited)
GITHUB_MAX_REPOS=100

# Knowledge sync cron (default: daily at 3 AM)
CRON_KNOWLEDGE_SYNC="0 3 * * *"